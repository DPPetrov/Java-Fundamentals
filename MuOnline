import java.util.Scanner;

public class MuOnline {
    static Scanner sc = new Scanner(System.in);
    static String command = sc.next().toLowerCase();
    static int value = Integer.parseInt(sc.next());
    static String separator = sc.next();
    static int health = 100;
    static int money = 0;
    static int roomCount = 0;

    public static void main(String[] args) {

        //правим 4 метода, които отговарят на действията - heal, loot, combat, isAlive

        if (!command.equals("potion") && !command.equals("chest")){
            combat();
        }else if (command.equals("potion")){
            heal();
        }else if (command.equals("chest")){
            loot();
        }

    }

    public static void combat(){
        health -= value;

        if (health > 0){
            roomCount++;
            if (command.equals("boss")){
                System.out.printf("You've made it!\n" +
                        "Bitcoins: %d\n" +
                        "Health: %d\n", money, health);
                System.exit(0);
            }
            System.out.println("You slayed " + command + ".");
        }else{
            System.out.println("You died! Killed by " + command + ".");
            System.out.println("Best room: " + roomCount);
        }
        
    }

        public static void heal (){
        health += value;
        if (health > 100){
            health = 100;
        }
    }
    
    
}
